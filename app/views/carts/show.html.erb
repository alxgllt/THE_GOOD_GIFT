<div class="main-body" id="cart-page-body">
  <div class="row" id="header-cart-page">
    <div class="col-xs-2">
    </div>
    <div class="col-xs-8">

      <!-- Checkout progress bar -->
      <div class="bar-container">
        <div class="progression-bar">
          <div class="circle-1">
            <span class="fa-stack fa-4x">
              <i id="white-circle" class="fa fa-circle fa-stack-2x icon-background4"></i>
              <i class="fa fa-circle-thin fa-stack-2x icon-background6"></i>
            </span>
          </div>
          <div class="circle-2">
            <span class="fa-stack fa-4x">
              <i id="white-circle" class="fa fa-circle fa-stack-2x icon-background4"></i>
              <i class="fa fa-circle-thin fa-stack-2x icon-background6"></i>
            </span>
          </div>
          <div class="circle-3">
            <i class="fa fa-circle" aria-hidden="true"></i>
          </div>
          <div class="circle-4">
            <span class="fa-stack fa-4x">
              <i id="white-circle" class="fa fa-circle fa-stack-2x icon-background4"></i>
              <i class="fa fa-circle-thin fa-stack-2x icon-background6"></i>
            </span>
          </div>
        </div>

        <div class="progression-bar-text">
          <div class="circle-1">
            <span>Welcome</span>
          </div>
          <div class="circle-2">
            <span>Sélection des univers</span>
          </div>
          <div class="circle-3">
            <span><strong>Sélection des cadeaux</strong></span>
          </div>
          <div class="circle-4">
            <span>Checkout</span>
          </div>
        </div>
      </div>


        <!-- bar price -->
        <div class="bar-price">
          <h4 class='text-center'>Utilisation du budget:</h4>
          <div class="progress-wrap progress" data-progress-percent="<%= @cart.total %>" data-total='<%= @cart.total %>'>
            <div class="progress-bar progress"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-2">

      <!-- surprime me -->
      <div class="surprise-me btn-surprise hidden">
        <%= image_tag "surprise_me.svg" %>
        <p>SURPRISE ME</p>
        <%= form_tag cart_surprise_me_path(@cart), method: 'patch' do%>
        <%= submit_tag 'surprise', class: 'btn btn-primary order-button btn-rounded' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3">

      <!-- Sidebar -->
      <a href="#menu-toggle" class="btn btn-options" id="menu-toggle">
        <span class="arrow-bounce"><i class="fa fa-arrow-left" aria-hidden="true"></i></span>
        &nbsp;&nbsp;&nbsp;options
      </a>

      <!-- Sidebar -->
      <div id="sidebar-wrapper" class="sidebar-unfixed">
        <%= render 'products/search_bar_products' %>
      </div>
    </div>
    <div class="col-xs-6">
      <div id="wrapper" class="toggled">
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-12">
                  <div class="row">
                    <div class="flex-bundle">
                      <div class="col-xs-9 text-center">
                        <%= render "matching_list", matching_list: @matching_list %>
                      </div>
                      <!-- On affiche le panier -->
                      <div class="col-xs-3">
                        <div class="cart-cont ent">
                          <div class="checkout-card cart-card">
                            <div class="bag">
                              <div class="filter-title">
                                <div><span class="">Vos <%= @cart.gift_number %> cadeaux</span></div>
                              </div>
                              <div class="bag-item-list">
                                <div class="bag-item-wrapper">
                                  <ul class="items">
                                    <% @cart.products.each do |product| %>
                                    <% unless product == @cart.products.last %>
                                    <% end %>
                                    <li class="item">
                                      <%= cl_image_tag product.image, height: 300, width: 400, crop: :fit %>
                                      <div>
                                        <span class="item-name"> <%= product.name %> </span>
                                        <span class="item-brand"> <%= product.brand %>  </span>
                                        <span class="item-modal" data-toggle="modal" data-target="#modal-<%= product.id %>">> voir détails produit <</span>
                                      </div>
                                    </li>
                                    <hr>
                                    <% end %>
                                  </ul>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <% if @cart.gift_number == @cart.cart_products.count %>
                  <%= form_tag orders_path, method: 'post' do%>
                    <%= hidden_field_tag "cart_id", params[:id] %>
                  <%= submit_tag 'Passer commande', class: 'btn btn-primary order-button btn-rounded' %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
          <!-- /#page-content-wrapper -->

        </div>

      <!-- modal du cart -->
      <% @cart.products.each do |product| %>
        <div class="modal fade" id="modal-<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"><%= product.name %></h4>
                <div class="product-brand">
                  <%= product.brand %>
                </div>
              </div>
              <div class="modal-body text-center">
                <div class="modal-image text-center">
                  <%= cl_image_tag product.image %>
                </div>
                <div>
                  <h4>Description:</h4>
                  <p><%= product.description %></p>
                </div>
              </div>
              <!-- <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div> -->
            </div>
          </div>
        </div>
      <% end %>

    </div>
    <div class="col-xs-3">
    </div>
  </div>
</div>


