    <div class="error-messages">
    </div>
    <div class="form-inline">
      <%= form_tag(select_tags_path, :method => "get", id: "select-genre") do %>
      <%= text_field_tag :search_name, params[:search_name], placeholder: "Prénom", class: "form-control input-lg"%>
      <!-- <span class="input-symbol-euro"> -->
      <div class="input-group">
        <%= text_field_tag :search_price, params[:search_price], placeholder: "Budget", class: "form-control input-lg"%>
        <div class="input-group-addon input-lg">€</div>
      </div>
      <!-- </span> -->
      <%= select_tag :search_gender, options_for_select(["Homme", "Femme"], params[:search_gender]), placeholder: "Genre", class: "form-control input-lg", id: "sexe" %>
      <%= text_field_tag :search_date, params[:search_date], placeholder: "Date de la remise du cadeau", class: "form-control input-lg hidden", id: "datepicker"%>
      <%= submit_tag "Je lui fais plaisir", class: "btn btn-primary btn-home input-lg" %>
      <% end %>
    </div>


    <% content_for :after_js do %>
    <script>
     $("#select-genre").on("submit", function() {
      var paragraph = $('<p>').text("Votre ami(e) est il un homme ou une femme ?");
      if ($( "#sexe option:selected" ).text() !== "Genre") {
        return true;
      } else {
        $("#sexe").toggleClass('red-message-error');
        $('.error-messages').append(paragraph);
    return false; // prevent it from being submitted (errors, etc.)
  }
});
</script>
<% end %>
