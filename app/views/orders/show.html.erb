<div class="main-body">
  <div class="container checkout-header">
    <h1>
      Paiement
    </h1>
  </div>
  <div class="container checkout-body">
    <div class="row">
      <div class="col-xs-1 col-sm-8" id="forms">
        <div class="checkout-card form-card">

        </div>
      </div>

      <div class="col-xs-1 col-sm-4" id="forms">
        <div class="checkout-card cart-card">
          <div class="bag">
            <div class="bag-header">
              <p>
                <%= @order.products.size %> CADEAUX
              </p>
              <%= link_to "Modifier", :back %>
            </div>

            <hr>

            <div class="bag-item-list">
                <div class="bag-item-wrapper">
                  <ul class="items">
                    <li class="item">
                      <img src="https://unsplash.com/?photo=zKAc297gc24" alt="">
                      <div>
                        <span class="item-name">Name</span>
                        <span class="item-name">Brand</span>
                        <span class="item-name">Desc</span>
                      </div>
                    </li>
                  </ul>
                </div>
            </div>

            <hr>

            <div class="bag-total">
              <p id="total-content">
                TOTAL À RÉGLER
              </p>
              <p id="total-price">
                <%= @order.total_price %> €
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




