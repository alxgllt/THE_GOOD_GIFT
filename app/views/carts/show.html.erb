          $('#sidebar-wrapper').removeClass('sidebar-unfixed');
        }
        else {
          $('#sidebar-wrapper').addClass('sidebar-unfixed');
          $('#sidebar-wrapper').removeClass('sidebar-fixed');
        }
      });
    });

    // SIGNATURE PROGRESS
    function moveProgressBar() {
      var current_total = parseInt($('.progress-wrap').data('total'));
      var current_product_price = parseInt($('.caroucard.active').data('price'));
      var new_total = current_total + current_product_price;
      var getPercent = (new_total / <%= @cart.price * 0.95 %>);
      var getProgressWrapWidth = $('.progress-wrap').width();
      var progressTotal = getPercent * getProgressWrapWidth;
      var animationLength = 900;
      $('.progress-wrap').data('progress-percent', new_total);
      console.log($('.progress-wrap').data('progress-percent'));
        // on page load, animate percentage bar to data percentage length
        // .stop() used to prevent animation queueing
        $('.progress-bar').stop().animate({
          left: progressTotal
        }, animationLength);
      }

      // CHANGE GIFT NUMBER
        // retirer un cadeau
        $(document).ready(function() {
          var max_nb_gifts = <%= @cart.gift_number_range.last %>;
          $(".fa-minus").click(function(e) {
            e.preventDefault();
            var actual_nb_gifts = parseInt($("#gift_number").val());
            if (actual_nb_gifts > 2) {
              new_nb_gifts = actual_nb_gifts - 1;
              $(".cadeau-display").html((new_nb_gifts));
              $("#gift_number").val(new_nb_gifts);
            }

          });
          $(".fa-plus").click(function(e) {
            e.preventDefault();
            var actual_nb_gifts = parseInt($("#gift_number").val());
            if (actual_nb_gifts < max_nb_gifts) {
              new_nb_gifts = actual_nb_gifts + 1;
              $(".cadeau-display").html(new_nb_gifts);
              $("#gift_number").val(new_nb_gifts);
            }

          });
        });

        // swipe cards of gifts for choice
        $(document).ready(function() {
          $(".matching-list-container").on( "click", ".swipe-left", function(e) {
            e.preventDefault();
            var allProducts = $('.caroucard');
            var currentProduct = $('.caroucard.active');
            var newProduct = findPrevProduct(currentProduct, allProducts);
            currentProduct.removeClass('active').slideUp();
            newProduct.addClass('active').slideDown();
            // $(".caroucard.active").slideDown();
            // $(".caroucard.active").prev().slideUp();
            // $(".caroucard.active").removeClass('active').prev().addClass('active');
          });
          $(".matching-list-container").on( "click", ".swipe-right", function(e) {
            e.preventDefault();
            var allProducts = $('.caroucard');
            var currentProduct = $('.caroucard.active');
            var newProduct = findNextProduct(currentProduct, allProducts);
            currentProduct.removeClass('active').slideUp();
            newProduct.addClass('active').slideDown();
            // $(".caroucard.active").next().slideDown();
            // $(".caroucard.active").removeClass('active').next().addClass('active');
          });

          function findNextProduct(currentProduct, allProducts){
            var productCount = allProducts.length;
            var index = allProducts.index(currentProduct);
            // $.inArray(currentProduct, allProducts)
            // debugger;
            if(index == productCount - 1) {
              var nextIndex = 0 ;
            } else {
              var nextIndex =  index + 1;
            }
            return $(allProducts[nextIndex]);
          }

          function findPrevProduct(currentProduct, allProducts){
            var productCount = allProducts.length;
            var index = allProducts.index(currentProduct);
            // $.inArray(currentProduct, allProducts)
            // debugger;
            if(index == 0) {
              var nextIndex = productCount - 1 ;
            } else {
              var nextIndex =  index - 1;
            }
            return $(allProducts[nextIndex]);
          }
        });

