              <div class="product-name">
                <%= product.name %>
              </div>
              <div class="product-brand">
                <%= product.brand %>
              </div>
              <div class="product-image">
                <%= cl_image_tag product.image, height: 100, crop: :fill %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>



