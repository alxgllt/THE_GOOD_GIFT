<% if @email_changed %>
  $('#email-data').text('<%= @order.email %>');
  $('#email-data').removeClass('hidden');
  $('#email-input-field').addClass('hidden');
  $('#edit-email-btn').removeClass('hidden');
  $('#address-card-active').removeClass('hidden');
  $('#city-card-mask').addClass('hidden');
  $('#address-card-mask').addClass('hidden');
  $('#payment-btn').prop("disabled", false);
<% end %>

<% if @phone_changed || @address_changed %>
  $('#first_name-data').text('<%= @order.first_name %>');
  $('#last_name-data').text('<%= @order.last_name %>');
  $('#company-data').text('<%= @order.company %>');
  $('#address-data').text('<%= @order.address %>');
  $('#phone-data').text('<%= @order.phone %>');
  $('#address-form-fields').addClass('hidden');
  $('#address-data-div').removeClass('hidden');
  $('.address-card').css('height','250px');
  $('#city-card-mask').addClass('hidden');
  $('#email-card-mask').addClass('hidden');
  $('#payment-btn').prop("disabled", false);
<% end %>
